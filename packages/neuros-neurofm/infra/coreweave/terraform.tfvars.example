# NeuroFMx CoreWeave Configuration
# Copy to terraform.tfvars and fill in your values

cluster_name     = "neurofmx-cks"
k8s_version      = "1.29"
region           = "ORD"               # Options: ORD (Chicago), LAS (Vegas), EWR (NYC), LGA (NYC)
gpu_machine_type = "gpu.h100.80gb.hgx" # Single HGX node with 8x H100 80GB
gpu_replicas     = 1                   # Start with 1 node, scale up as needed

# Prefer setting these via environment variables:
# export COREWEAVE_API_KEY="your-api-key"
# export COREWEAVE_ACCOUNT_ID="your-account-id"

# Uncomment only if not using env vars (NOT RECOMMENDED for version control):
# coreweave_api_key     = "your-api-key"
# coreweave_account_id  = "your-account-id"
